import java.util.*;
public class Main
{
	public static void main(String[] args) 
	{
		int n;
		Scanner sc=new Scanner(System.in);
	    n=sc.nextInt();
	    int a=65;
		char ch='A';
		for(int i=0;i<=n-1;i++)
		{ int x=i;
           for(int j=0; j<=i;j++)
		  {
		    System.out.print(ch+" ");
		    ch++;
		  }
           System.out.println();
		}
	
	}
}

